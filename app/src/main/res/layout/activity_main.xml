<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/GREY"
    tools:context=".MainActivity">

    //Expressão e resultado.

    <androidx.appcompat.widget.AppCompatTextView

        android:id="@+id/resultado"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textColor="@color/black"
        android:gravity="end"
        android:textSize="42sp"
        android:layout_margin="10dp"
        android:maxLines="1"
        android:ellipsize="start"


        />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/expressao"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textColor="@color/black"
        android:gravity="end"
        android:singleLine="true"
        android:textSize="28sp"
        android:layout_margin="10dp"
        android:text=""
        android:ellipsize="start"



        />



    // Botões e operações

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.8"
    android:orientation="horizontal">
    <androidx.appcompat.widget.AppCompatButton

        android:id="@+id/porcentagem"
        style="@style/Container_Button"
        android:text="%"

        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/abre_colchetes"
        style="@style/Container_Button"
        android:text="("


        />

        <androidx.appcompat.widget.AppCompatButton

            android:id="@+id/fecha_colchetes"
            style="@style/Container_Button"
            android:text=")"


            />

        <androidx.appcompat.widget.AppCompatButton

            android:id="@+id/divisao"
            style="@style/Container_Button"
            android:text="/"
            android:background="@color/blue"
            android:textColor="@color/white"

            />



    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/sete"
            style="@style/Container_Button"
            android:text="7"


            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/oito"
            style="@style/Container_Button"
            android:text="8"


            />

        <androidx.appcompat.widget.AppCompatButton

            android:id="@+id/nove"
            style="@style/Container_Button"
            android:text="9"


            />

        <androidx.appcompat.widget.AppCompatButton

            android:id="@+id/multiplicacao"
            style="@style/Container_Button"
            android:text="X"
            android:background="@color/blue"
            android:textColor="@color/white"


            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/quatro"
            style="@style/Container_Button"
            android:text="4"


            />

        <androidx.appcompat.widget.AppCompatButton

            android:id="@+id/cinco"
            style="@style/Container_Button"
            android:text="5"


            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/seis"
            style="@style/Container_Button"
            android:text="6"


            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/subtracao"
            style="@style/Container_Button"
            android:text="-"
            android:background="@color/blue"
            android:textColor="@color/white"

            />



    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/um"
            style="@style/Container_Button"
            android:text="1"

            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dois"
            style="@style/Container_Button"
            android:text="2"

            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/tres"
            style="@style/Container_Button"
            android:text="3"

            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/soma"
            style="@style/Container_Button"
            android:text="+"
            android:background="@color/blue"
            android:textColor="@color/white"

            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/zero"
            style="@style/Container_Button"
            android:text="0"

            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ponto"
            style="@style/Container_Button"
            android:text="."

            />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/backspace"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:textSize="28dp"
            android:textStyle="bold"
            android:src="@drawable/backspace"
            android:scaleType="center"
            android:layout_margin="0.8sp"



            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/igual"
            style="@style/Container_Button"
            android:background="@color/orange"
            android:textColor="@color/white"
            android:text="="

            />



    </LinearLayout>




</LinearLayout>